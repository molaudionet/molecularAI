{
  "run": {
    "seed": 42,
    "split": {
      "train": 0.8,
      "val": 0.1,
      "test": 0.1
    }
  },
  "train_mode": "audio",
  "dataset": {
    "path": "data/esol.csv",
    "smiles_col": "smiles",
    "id_col": "Compound ID",
    "label_cols": [
      "measured log solubility in mols per litre"
    ],
    "task_types": {
      "measured log solubility in mols per litre": "regression"
    }
  },
  "features": {
    "mode": "audio",
    "cache_dir": "cache/esol_audio",
    "audio": {
      "enabled": true,
      "generation": {
        "sample_rate": 16000,
        "duration": 2.0,
        "frequency_range": [
          20,
          20000
        ],
        "mapping_method": "property_based"
      },
      "embed": {
        "model_name": "facebook/wav2vec2-base",
        "cache_path": "cache/esol_audio/audio_embeddings.npy",
        "layer": -1,
        "pooling": "mean"
      }
    }
  },
  "model": {
    "type": "mlp",
    "hidden_dims": [
      256,
      128,
      64
    ],
    "dropout": 0.3,
    "batch_norm": true
  },
  "train": {
    "epochs": 100,
    "batch_size": 32,
    "lr": 0.001,
    "optimizer": "adam",
    "weight_decay": 0.0001,
    "early_stopping": {
      "enabled": true,
      "patience": 20,
      "metric": "val_loss",
      "mode": "min"
    },
    "scheduler": {
      "enabled": true,
      "type": "reduce_on_plateau",
      "patience": 10,
      "factor": 0.5,
      "min_lr": 1e-05
    }
  },
  "metrics": {
    "primary": "r2",
    "additional": [
      "rmse",
      "mae"
    ]
  }
}